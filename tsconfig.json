{
  "compilerOptions": {
    "removeComments": true,
    "outDir": "./dist",
    "target": "ES2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["esnext", "esnext.asynciterable", "dom"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": false,
    "strict": true,
    "noEmit": false,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "types": []
  },
  "files": ["./src/main.ts"],
  "exclude": ["node_modules", "dist"]
}
