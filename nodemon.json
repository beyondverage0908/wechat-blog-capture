{
  "restartable": "rs",
  "ignore": [
    ".git",
    ".svn",
    "node_modules/**/node_modules",
    "logs",
    ".vscode",
    ".md"
  ],
  "verbose": true,
  "execMap": {
    "js": "node --harmony"
  },
  "watch": [
    "src/"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "exec": "ts-node -r tsconfig-paths/register src/main.ts",
  "ext": "ts js json"
}
